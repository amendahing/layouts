<html>
<head>
    <title>Document</title>
    <%= stylesheet_link_tag     'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag     'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tag %>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h1>All Posts</h1>
                <%= yield :left_column %>
            </div>
            <div class="col-md-4">
                <h1>New Post</h1>
                <%= yield :middle_column %>
            </div>
            <div class="col-md-4">
                <h1>Go to Users Page</h1>
                <%= yield :right_column %>
            </div>
        </div>
    </div>

    <%= yield %>

</body>
</html>
